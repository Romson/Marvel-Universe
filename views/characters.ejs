<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-dragon"></i> Marvel Universe</h1>
            <p>HEROES AND VILLAINS FROM THE HUMBLE HOUSE OF IDEAS!</p>
            <p>
                <a class="btn btn-primary" href="/characters/new">Add your favorite characters here <i class="fas fa-file-import"></i></a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Some of the many characters you'll see in Action</h3>
        </div>
    </div>
    
    <div class="row text-center">
        
        <% characters.forEach((character) => { %>
        
            <div class="col-md-3 col-sm-6"> 
            
                <div class="card">
                    <img class="card-img-top" src="<%= character.image %>" alt="Card image cap" width="100%" height="200px">
                    <div class="card-body">
                        <h4 class="card-title"><%= character.name %></h4>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a href="#" class="btn btn-primary">More info <i class="fas fa-external-link-square-alt"></i></a>
                    </div>
                </div>
                
            </div>
            
        <% }); %>
        
    </div>
    
</div>

<% include partials/footer %>